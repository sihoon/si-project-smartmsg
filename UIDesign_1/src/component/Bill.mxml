<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:bill="component.bill.*"
		 stateChangeComplete="bill_stateChangeCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function bill_stateChangeCompleteHandler(event:FlexEvent):void
			{
				if (currentState == "method") {
					helpText.text = "결제 방식을 선택해 주세요.";
					subHelpText.text = "결제 방식을 선택 하면 금액 선택 창이 나타납니다.";
				}
				else if (currentState == "amount") {
					helpText.text = "결제 하실 금액을 선택 하세요.";
					subHelpText.text = "결제방식을 변경 하시려면 선택한 결제방식 글씨를 클릭 하세요.";
				}
				else if (currentState == "charge") {
					helpText.text = "결제하기 버튼을 눌러 결제하세요.";
					subHelpText.text = "결제방식 또는 금액을 변경 하시려면 선택한 항목의 글씨를 클릭 하세요.";
				}
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		
	</fx:Declarations>
	<s:states>
		<s:State name="method" />
		<s:State name="amount" />
		<s:State name="charge" />
	</s:states>
	
	<s:transitions>
		<s:Transition id="transition" fromState="*" toState="*">
			<s:Parallel id="t1" targets="{[method, amount, charge]}">
				<s:Move  duration="400"/>
				<s:Resize duration="400"/>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
	
	<s:HGroup>
		<s:VGroup gap="2" horizontalAlign="right">
			<s:RichText width="254" whiteSpaceCollapse="preserve" fontFamily="NGDB" color="#3e3e3e" fontSize="50" lineHeight="80%" trackingRight="-3.5%">
				<s:content><s:p><s:span>결제센터</s:span></s:p></s:content>
			</s:RichText>
			<s:RichText width="181" height="27" whiteSpaceCollapse="preserve" fontFamily="NGD" color="#8d8d8d" fontSize="24" lineHeight="166.65%" trackingRight="-3.5%">
				<s:content><s:p><s:span>건수충전하기</s:span></s:p></s:content>
			</s:RichText>
			
		</s:VGroup>
		<s:HGroup paddingTop="100" width="100%" >
			<s:Group width="100%" height="100%">
				<s:Group horizontalCenter="0">
					<s:BitmapImage source="@Embed('assets/message_help2.png')" smooth="true"/>
					<s:RichText id="helpText" left="30" top="24"
								text="결제 방식을 선택해 주세요." color="0xFFFFFF" fontFamily="NGDB" fontSize="42"/>
					<s:RichText id="subHelpText" left="30" top="69" width="630"
								text="방식을 선택 하면 금액 선택 창이 나타납니다." color="0xCCCCCC" fontFamily="NGD" fontSize="20"/>
				</s:Group>
				
				<s:Group top="150" left="20"  height="500" right="0">
					<bill:Method id="method"
								 x.method="30" y.method="120"
								 x="0" y="0"
								 select="{this.currentState='method'}"
								 selected="{this.currentState='amount';amount.currentState='select'}"/>
					
					<bill:Amount id="amount"
								 includeIn="amount, charge" 
								 x.amount="50" y.amount="120"
								 x="160" y="0"
								 select="{this.currentState='amount'}"
								 selected="{this.currentState='charge'}"/>
					
					<bill:Charge id="charge"
								 includeIn="charge"
								 verticalCenter="0" horizontalCenter="0"/>
				</s:Group>
				
				
			</s:Group>
	
		</s:HGroup>
			
		
	</s:HGroup>
</s:Group>
