<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" width="300" minHeight="20">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("module.url.att.Image")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="default" />
		<s:State name="view" />
		<s:State name="actEmpty" />
		<s:State name="actContent" />
	</s:states>
	
	<s:VGroup width="100%">
		<s:Group id="ele" width="100%" height="100%">
			<s:List id="imgList" width="100%" height="100%" itemRenderer="module.url.att.skin.ImageSkinImgList"></s:List>
			<s:Group id="addImage" left="0" right="0" height="80" includeIn="default, actEmpty">
				<s:Rect left="0" right="0" top="0" bottom="0"><s:fill><s:SolidColor color="#000000" alpha="0.1" /></s:fill></s:Rect>
				<s:Label text=" + 클릭하여 이미지를 추가 하세요." verticalCenter="0" horizontalCenter="0" />
			</s:Group>
		</s:Group>
		<s:Group id="attribute" includeIn="actContent">
			<s:Button label="link" />
		</s:Group>
	</s:VGroup>
</s:Skin>