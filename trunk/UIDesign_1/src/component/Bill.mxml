<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="700" height="300" xmlns:bill="component.bill.*">
	<fx:Declarations>
		
	</fx:Declarations>
	<s:states>
		<s:State name="method" />
		<s:State name="amount" />
		<s:State name="charge" />
	</s:states>
	
	<s:transitions>
		<s:Transition id="transition" fromState="*" toState="*">
			<s:Parallel id="t1" targets="{[method, amount, charge]}">
				<s:Move  duration="400"/>
				<s:Resize duration="400"/>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
	
	<bill:Method id="method"
				 x.method="0" y.method="120"
				 x.amount="0" y.amount="0"
				 x.charge="0" y.charge="0"
				 select="{this.currentState='method'}"
				 selected="{this.currentState='amount';amount.currentState='select'}"/>
	
	<bill:Amount id="amount"
				 includeIn="amount, charge" 
				 x.amount="0" y.amount="120"
				 x.charge="120" y.charge="0"
				 select="{this.currentState='amount'}"
				 selected="{this.currentState='charge'}"/>
	
	<bill:Charge id="charge"
				 includeIn="charge"
				 x="0" y="120"/>
</s:Group>
