<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("component.Log")]
	</fx:Metadata>

	<s:layout>
		<s:HorizontalLayout gap="20" />
	</s:layout>
	<s:VGroup>
		<s:HGroup>
			<s:Label id="preMonth" text="이전달" fontFamily="NGD" />
			<s:Label id="month" text="" fontSize="26" fontFamily="NGD" />
			<s:Label id="nextMonth" text="다음달" fontFamily="NGD" />
		</s:HGroup>
		<s:HSlider id="monthSlider" width="100%" />
		<s:List id="groupList"
				width="250"
				height="400"
				itemRenderer="skin.log.GroupListRenderer" />
	</s:VGroup>
	<s:VGroup>
		<s:HGroup>
			<s:RichText id="message" width="100" height="150" fontFamily="Dotum" />
			<mx:PieChart id="chart" width="300" height="100" fontFamily="Dotum" >
			</mx:PieChart>
		</s:HGroup>
		<s:DataGrid id="detailList"
					width="400"	height="350"
					fontFamily="Dotum"
					skinClass="skin.log.DetailListSkin" chromeColor="0xffffff">
			<s:columns>
				<s:ArrayList>
					<s:GridColumn dataField="phone" headerText="전화번호"/>
					<s:GridColumn dataField="name" headerText="이름"/>
					<s:GridColumn dataField="rslt" headerText="결과"/>
					<s:GridColumn dataField="rsltDate" headerText="결과시간"/>
					<s:GridColumn dataField="callback" headerText="회신번호"/>
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
	</s:VGroup>
</s:Skin>
