<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:lib="lib.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("component.emoticon.Emoticon")]
	</fx:Metadata>
	<s:states>
		<s:State name="specialChar"/>
		<s:State name="myMessage"/>
		<s:State name="emoticon"/>
		<s:State name="sentMessage"/>
	</s:states>
	<s:BitmapImage left="0" right="0" top="0" bottom="0" source="@Embed('/assets/titleWindow.png', scaleGridTop='42', scaleGridBottom='138', scaleGridLeft='11', scaleGridRight='118')" />
	<s:VGroup paddingTop="50" paddingLeft="10" paddingRight="10" paddingBottom="10">
		<s:ButtonBar id="gubunBar" includeIn="emoticon" fontFamily="NGD"/>
		<s:List id="category" includeIn="emoticon"
				width="435" height="50" itemRenderer="skin.emoticon.CategoryRenderer"  fontFamily="NGD" >
			<s:layout><lib:FlowLayout /></s:layout>
		</s:List>
		<s:List id="msgBox" includeIn="emoticon, myMessage, sentMessage" width="435" 
				fontFamily="Dotum"
				itemRenderer="skin.emoticon.EmoticonRenderer" >
			<s:layout><s:TileLayout horizontalGap="10" verticalGap="10"/></s:layout>
		</s:List>
		<lib:Paging id="paging" includeIn="emoticon, myMessage, sentMessage" />
		
		<s:Scroller includeIn="specialChar" skinClass="skin.scroller.ThinScrooller" width="435" height="200">
			<s:TileGroup id="specialCharGroup" width="435"  fontFamily="NGD"/>	
		</s:Scroller>
	</s:VGroup>
	<s:Button id="close" width="16" height="16" right="10" top="7" skinClass="skin.compnent.ButtonCloseSkin" />
</s:Skin>
