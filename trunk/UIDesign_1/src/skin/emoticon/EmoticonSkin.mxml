<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:lib="lib.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("component.emoticon.Emoticon")]
	</fx:Metadata>
	<s:states>
		<s:State name="specialChar"/>
		<s:State name="myMessage"/>
		<s:State name="emoticon"/>
		<s:State name="sentMessage"/>
	</s:states>
	
	<s:VGroup>
		<s:ButtonBar id="gubunBar" includeIn="emoticon" fontFamily="NGD"/>
		<s:List id="category" includeIn="emoticon"
				width="500" height="50" itemRenderer="skin.emoticon.CategoryRenderer"  fontFamily="NGD" >
			<s:layout><lib:FlowLayout /></s:layout>
		</s:List>
		<s:List id="msgBox" includeIn="emoticon, myMessage, sentMessage" width="500" 
				fontFamily="Dotum"
				itemRenderer="skin.emoticon.EmoticonRenderer" >
			<s:layout><s:TileLayout horizontalGap="32" verticalGap="10"/></s:layout>
		</s:List>
		<lib:Paging id="paging" includeIn="emoticon, myMessage, sentMessage" />
		
		<s:Scroller includeIn="specialChar" skinClass="skin.scroller.ThinScrooller" width="500" height="200">
			<s:TileGroup id="specialCharGroup" width="500"  fontFamily="NGD"/>	
		</s:Scroller>
	</s:VGroup>
	<s:RichText id="close" text="X" top="-26" right="-26" fontSize="26" fontFamily="NGD" />
</s:Skin>
