<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" mouseDown="itemrenderer1_mouseDownHandler(event)">
	<fx:Script>
		<![CDATA[
			import component.Send;
			
			import mx.events.FlexEvent;
			
			override public function set data(value:Object):void { 
				super.data = value; 
				
				// Check to see if the data property is null. 
				if (value== null) return; 
				
				phone.text = value.phone;
			}
			
			
			
			protected function def_clickHandler(event:MouseEvent):void {
				
				var obj:Send = parentApplication.send as Send;
				obj.rt.callbackUp(int(data.idx));
			}
			
			protected function delete_clickHandler(event:MouseEvent):void {
				
				var obj:Send = parentApplication.send as Send;
				obj.rt.callbackDelete(int(data.idx));
			}
			
			protected function itemrenderer1_mouseDownHandler(event:MouseEvent):void
			{
				if ( event.target.hostComponent.id == "defBtn" || event.target.hostComponent.id == "deleteBtn" ) {
					event.stopPropagation();
					event.stopImmediatePropagation();
				}
				
			}
			
		]]>
	</fx:Script>
	<s:Group width="100%" height="30">
		<s:Label id="phone" left="2" verticalCenter="0" />
		<s:Image id="defBtn" right="28" verticalCenter="0" width="25" height="25" 
				 source="/skin/ics/assets/light/icon/3-rating-good.png" smooth="true"
				 buttonMode="true"
				 toolTip="기본설정"
				 click="def_clickHandler(event)" />
		<s:Image id="deleteBtn" right="1" verticalCenter="0" width="25" height="25" 
				 source="/skin/ics/assets/light/icon/5-content-backspace.png" smooth="true"
				 buttonMode="true"
				 toolTip="삭제"
				 click="delete_clickHandler(event)" />
	</s:Group>
	
</s:ItemRenderer>
