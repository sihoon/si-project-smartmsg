<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" mouseDown="itemrenderer1_mouseDownHandler(event)">
	<fx:Script>
		<![CDATA[
			import component.Send;
			
			import mx.events.FlexEvent;
			
			override public function set data(value:Object):void { 
				super.data = value; 
				
				// Check to see if the data property is null. 
				if (value== null) return; 
				
				phone.text = value.phone;
			}
			
			
			
			protected function def_clickHandler(event:MouseEvent):void {
				
				var obj:Send = parentApplication.send as Send;
				obj.rt.callbackUp(int(data.idx));
			}
			
			protected function delete_clickHandler(event:MouseEvent):void {
				
				var obj:Send = parentApplication.send as Send;
				obj.rt.callbackDelete(int(data.idx));
			}
			
			protected function itemrenderer1_mouseDownHandler(event:MouseEvent):void
			{
				if ( event.target.id == "defBtn" || event.target.id == "deleteBtn" ) {
					event.stopPropagation();
					event.stopImmediatePropagation();
				}
				
			}
			
		]]>
	</fx:Script>
	<s:Group width="100%" height="30">
		<s:Label id="phone" left="2" verticalCenter="0" fontFamily="NGD" fontSize="16" />
		<s:Button id="defBtn" width="70"  right="32" verticalCenter="0" click="def_clickHandler(event)" label="기본설정" fontFamily="NGD" fontSize="12"/>
		<s:Button id="deleteBtn" width="30" right="1" verticalCenter="0" click="delete_clickHandler(event)" label="X" fontFamily="NGD" fontSize="12" />
	</s:Group>
	
</s:ItemRenderer>
