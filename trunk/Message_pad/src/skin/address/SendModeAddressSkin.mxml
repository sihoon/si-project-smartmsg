<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("component.address.SendModeAddress")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=searchTextInput, type=spark.components.TextInput, required=false
	name=addressTree, type=mx.controls.Tree, required=false
	-->
	<s:VGroup>
		<s:HGroup verticalAlign="middle">
			<s:TextInput id="searchTextInput" styleName="textinput_light" prompt="이름 or 전화번호"/>
			<s:Button id="searchButton" label="검색" width="80" height="24" styleName="button_light" />
			<s:Button id="allButton" label="전체보기" width="100" height="24" styleName="button_light" />
		</s:HGroup>
		
		<mx:Tree id="addressTree" 
				 width="500" height="560"
				 defaultLeafIcon="@Embed('skin/ics/assets/light/icon/6-social-person.png')"
				 itemRenderer="skin.address.SendModeAddressRenderer"
				 fontFamily="Gulim"/>
	</s:VGroup>	
</s:Skin>
