<?xml version="1.0" encoding="utf-8"?>
<s:MXTreeItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			import component.address.SendModeAddress;
			
			override public function set data(value:Object):void {
				super.data = value;
				 if (data != null && treeListData != null && treeListData.hasChildren){
					var chk:XMLList = new XMLList(treeListData.item);
					var myChild:int = chk[0].children().length();
					labelField.text = treeListData.label + " (" + myChild + ")";
				}else if (data != null) {
					labelField.text = data.attribute('label') != "" ? data.attribute('label')+"  "+data.attribute('phone') : data.attribute('phone');
				} 

			}
			
			protected function send_clickHandler(event:MouseEvent):void {
				var obj:SendModeAddressSkin = parentDocument as SendModeAddressSkin;
				
				var parent:SendModeAddress = SendModeAddressSkin(parentDocument).hostComponent as SendModeAddress;
				parent.addSend(data.attribute('type'), treeListData.item  as XML);
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />            
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	<s:HGroup left="0" right="0" top="0" bottom="0" verticalAlign="middle">
		<s:Rect id="indentationSpacer" width="{treeListData.indent}" percentHeight="100" alpha="0">
			<s:fill>
				<s:SolidColor color="0xFFFFFF" />
			</s:fill>
		</s:Rect>
		<s:Group id="disclosureGroup">
			<s:BitmapImage source="{treeListData.disclosureIcon}" visible="{treeListData.hasChildren}" />
		</s:Group>
		<s:BitmapImage source="{treeListData.icon}" />
		<s:Label id="labelField" paddingTop="2"/>
	</s:HGroup>
	<s:Group right="2">
		<s:Image source="@Embed('assets/post_btn_send.gif')"  visible="{data.attribute('type')!='all'}" click="send_clickHandler(event)"/>
	</s:Group>
</s:MXTreeItemRenderer>
