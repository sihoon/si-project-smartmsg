<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import lib.SLibrary;
			
			import valueObjects.LogVO;
			
			override public function set data(value:Object):void
			{
				// TODO Auto Generated method stub
				super.data = value;
				if (super.data != null) {
					var vo:LogVO = super.data as LogVO;
					main.text = SLibrary.cutByteTo( LogVO(super.data).message.replace(/\n/g,"") , 40 );
					sub.text = vo.mode + " " + vo.cnt + "ê±´ " + vo.timeSend ;
				}
					
			}
			
			override public function set selected(value:Boolean):void
			{
				// TODO Auto Generated method stub
				super.selected = value;
				
				sel.visible = value;
			}
			
		]]>
	</fx:Script>
	
	
	<s:VGroup top="7" bottom="5" left="5" right="3">
		<s:Label id="main" fontSize="12" color="#222222"/>
		<s:Label id="sub" fontSize="10" color="#777777" />
	</s:VGroup>
	
	<s:BitmapImage id="sel" source="@Embed('/skin/ics/assets/list_select.png')" smooth="true" right="0" visible="false"/>
	
	<s:Rect width="100%" bottom="0" height="1"><s:fill><s:SolidColor color="#D9D9D9" /></s:fill></s:Rect>
	
</s:ItemRenderer>
