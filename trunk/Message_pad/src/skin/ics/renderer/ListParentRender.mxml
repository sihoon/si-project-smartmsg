<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import spark.components.List;
			
			[Bindable]
			private var bSelected:Boolean = false;
			
			[Bindable]
			private var bLast:Boolean = false;
			
			override public function set data(value:Object):void
			{
				// TODO Auto Generated method stub
				super.data = value;
				bSelected = selected;
			/* 	if (this.itemIndex == List(this.owner).dataProvider.length-1)
					bLast = true; */
				
				if (data.icon) icon.source = data.icon;
				if (data.label) txt.text = data.label;
				if (data.label_sub) txt_sub.text = data.label_sub;
				
			}
			
			override public function set selected(value:Boolean):void
			{
				// TODO Auto Generated method stub
				super.selected = value;
				
				sel.visible = value;
			}
			
			
		]]>
	</fx:Script>
	<s:HGroup verticalCenter="0" verticalAlign="middle" paddingLeft="4" paddingTop="7" paddingBottom="5">
		<s:Image id="icon" alpha="0.6" />
		<s:VGroup>
			<s:Label id="txt" color="#222222" fontSize="12"/>
			<s:Label id="txt_sub" color="#777777" fontSize="10"/>
		</s:VGroup>
		
	</s:HGroup>
	
	
	<s:BitmapImage id="sel" source="@Embed('/skin/ics/assets/list_select.png')" smooth="true" right="0" visible="false"/>	

	<s:Rect width="100%" bottom="0" height="0.5">
		<s:stroke>
			<s:SolidColorStroke color="#D9D9D9" />
		</s:stroke>
	</s:Rect>

</s:ItemRenderer>
