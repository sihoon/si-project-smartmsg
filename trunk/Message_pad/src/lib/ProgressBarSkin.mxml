<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" width="250" height="22">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("lib.ProgressBar")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import lib.ProgressBar;
		]]>
	</fx:Script>
	<s:Rect id="track" top="0" right="0" bottom="0" left="0"
			radiusX="0" radiusY="0">
		<s:filters>
			<s:DropShadowFilter angle="135" inner="true" distance="1" blurX="1" blurY="1" alpha=".7"/>
		</s:filters>
		<s:fill>
			<s:SolidColor color="#eaeaea"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect id="bar" top="1" radiusX="0" radiusY="0"
			width="{track.width * (ProgressBar(hostComponent).value / 100) }"
			height="20">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#9FFC60"/>
				<s:GradientEntry color="#63B030"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Label verticalCenter="0" text="{ProgressBar(hostComponent).txt}" />
</s:Skin>
