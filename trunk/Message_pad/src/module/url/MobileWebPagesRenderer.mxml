<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" creationComplete="creationCompleteHandler(event)" xmlns:flexpad="com.flexpad.*" >
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			[Bindable]
			private var ac:ArrayCollection = null;
			private var em:ElementManager = new ElementManager();
			
			override public function set data(value:Object):void
			{
				super.data = value;
				ac = new ArrayCollection( super.data as Array );
				
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				pageIndex.text = String(itemIndex+1)+" 페이지";
			}
			
			override public function set itemIndex(value:int):void
			{
				// TODO Auto Generated method stub
				super.itemIndex = value;
				if (pageIndex != null) pageIndex.text = String(itemIndex+1)+" 페이지";
			}
			
			
			protected function attAdd_clickHandler(event:MouseEvent):void { attList.visible = !attList.visible; }
			
			protected function att_clickHandler(num:int):void
			{
				var obj:Object = null;
				switch(num)
				{
					case ElementManager.TXT:{obj = {type:ElementManager.TXT,value:null};break;}
					case ElementManager.IMG:{obj = {type:ElementManager.IMG,value:null};break;}
					case ElementManager.INPUT:{obj = {type:ElementManager.INPUT,value:null};break;}
					case ElementManager.BTN:{obj = {type:ElementManager.BTN,value:null};break;}
					default:{break;}
				}
				ac.addItem(obj);
				attAdd_clickHandler(null);
			}
			
			protected function del_clickHandler(event:MouseEvent):void
			{
				var parentList:List = owner as List;
				parentList.dataProvider.removeItemAt(parentList.dataProvider.getItemIndex(data))
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	<s:VGroup gap="0" top="1" left="1" right="1" bottom="1">
		<flexpad:BarBlack width="100%" height="45">
			<s:Button label="+내용추가" left="5" click="attAdd_clickHandler(event)" verticalCenter="0" skinClass="com.flexpad.skin.BackButtonBlackSkin" color="#FFFFFF" />
			<flexpad:BarBlackLabel id="pageIndex" text="0" horizontalCenter="0" verticalCenter="0" color="#FFFFFF" />
			<s:Button label="삭제" click="del_clickHandler(event)" right="5" verticalCenter="0" skinClass="com.flexpad.skin.ButtonRedSkin" color="#FFFFFF" excludeFrom="normal"  />
		</flexpad:BarBlack>
		<s:List id="page" width="327" height="476" dataProvider="{ac}" 
				borderVisible="true" itemRenderer="module.url.MobileWebPagesRendererPage" contentBackgroundColor="#FFFFFF" contentBackgroundAlpha="1" useVirtualLayout="false" verticalScrollPolicy="on">
		</s:List>
	</s:VGroup>
	
	<s:VGroup id="attList" visible="false" top="20">
		<s:Button label="텍스트" click="att_clickHandler(ElementManager.TXT)" />
		<s:Button label="이미지" click="att_clickHandler(ElementManager.IMG)" />
		<s:Button label="입력" click="att_clickHandler(ElementManager.INPUT)" />
		<s:Button label="버튼" click="att_clickHandler(ElementManager.BTN)" />
	</s:VGroup>
	
	
</s:ItemRenderer>
