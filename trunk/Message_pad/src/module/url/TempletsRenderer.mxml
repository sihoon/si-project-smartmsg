<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import spark.components.List;
			[Bindable]
			private var bOptiln:Boolean = false;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				if (super.data != null) {
					if (super.data.icon && super.data.icon != "")
						img.source = super.data.icon;

					text.text = super.data.label;
					
					bOptiln = super.data.key > 0;
					
				}
			}
			
			protected function modify_clickHandler(event:MouseEvent):void {
				event.stopImmediatePropagation();
				var obj:MobileWebEditor = (this.owner as List).parentDocument as MobileWebEditor;
				obj.setKey(super.data.key);
				obj.keySelect();
			}
			protected function delete_clickHandler(event:MouseEvent):void {
				event.stopImmediatePropagation();
				var obj:MobileWebEditor = (this.owner as List).parentDocument as MobileWebEditor;
				obj.deleteKey(super.data.key);
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	<s:HGroup verticalAlign="middle" left="5" top="10" bottom="10">
		<s:BitmapImage id="img" fillMode="scale" width="50" height="50" smooth="true"/>
		<s:Label id="text" color="#000000" color.normal="#FFFFFF" />
	</s:HGroup>
	<s:Rect width="100%" bottom="0"><s:stroke><s:SolidColorStroke color="#aaaaaa" weight="1" /></s:stroke></s:Rect>
	<s:Group id="optionBox" width="100%" height="100%" includeIn="hovered" visible="{bOptiln}">
		<s:Rect width="100%" height="100%"><s:fill><s:SolidColor color="#000000" alpha="0.5" /></s:fill></s:Rect>
			<s:Button id="add" label="페이지 추가" horizontalCenter="0" top="3" skinClass="module.url.component.skin.ButtonBlue" color="#FFFFFF" buttonMode="true" useHandCursor="true" />
		<s:HGroup horizontalCenter="0" top="35">
			<s:Button id="modify" label="수정" skinClass="module.url.component.skin.ButtonOrange" color="#FFFFFF" mouseDown="modify_clickHandler(event)" buttonMode="true" useHandCursor="true" />
			<s:Button id="delete" label="삭제" skinClass="module.url.component.skin.ButtonRed" color="#FFFFFF" mouseDown="delete_clickHandler(event)" buttonMode="true" useHandCursor="true"  />	
		</s:HGroup>
			
	</s:Group>
	
</s:ItemRenderer>
