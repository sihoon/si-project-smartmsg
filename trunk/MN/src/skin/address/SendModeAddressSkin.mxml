<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:util="component.util.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("component.address.SendModeAddress")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=searchTextInput, type=spark.components.TextInput, required=false
	name=addressTree, type=mx.controls.Tree, required=false
	-->
	<s:VGroup width="524" height="100%" gap="10">
		<!-- actionbar -->
		<s:SkinnableContainer styleName="actionBar_contextuar_white" width="100%" height="48" depth="4">
			<s:layout><s:HorizontalLayout gap="10" paddingLeft="5" verticalAlign="middle" /></s:layout>
			<s:BitmapImage id="icon" source="skin/ics/assets/light/icon/6-social-group.png" fillMode="scale" width="36" height="36" smooth="true" />
			<s:VGroup gap="4">
				<s:RichText id="title_text" color="#222222" fontSize="14" text="주소록 발송"/>
				<s:RichText id="titleSub_text" color="#999999" fontSize="12" text="주소록의 그룹 또는 전화번호를 클릭 하시면 추가 됩니다."/>
			</s:VGroup>
			
		</s:SkinnableContainer>
		<s:HGroup verticalAlign="middle">
			<util:TextInputSearch id="searchTextInput" right="40" top="5" prompt="이름 or 전화번호" depth="5"
								  focusSkin="skin.ics.TextInputFocus" fontSize="12" />
			
			<s:Button id="allButton" label="전체보기" width="100" height="28" styleName="button_light" />
		</s:HGroup>
		
		<mx:Tree id="addressTree" 
				 width="100%" height="550"
				 disclosureClosedIcon="@Embed('/assets/close_folder.png')" disclosureOpenIcon="@Embed('/assets/open_folder.png')" defaultLeafIcon="@Embed('/assets/open_folder.png')" 
				 folderClosedIcon="{null}" folderOpenIcon="{null}"
				 borderVisible="false"
				 itemRenderer="skin.address.SendModeAddressRenderer"
				 showRoot="true" fontWeight="normal"
				 borderStyle="none" depthColors="0xeeeeee" rollOverColor="0xdddddd" dropShadowVisible="true"
				 fontFamily="Gulim"/>
	</s:VGroup>	
</s:Skin>
