<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
	
	<!-- background -->
	<s:Rect left="0" top="0" right="0" bottom="0" minWidth="14" minHeight="4">
		<s:stroke>
			<s:SolidColorStroke color="#666666" />
		</s:stroke>
		<s:fill>
			<s:SolidColor color="#EEEEEE" />
		</s:fill>
	</s:Rect>
	
	<!-- Gripper -->
	<s:Group horizontalCenter="-1" verticalCenter="0">
		<s:Line yFrom="0" yTo="4" xFrom="1" xTo="1">
			<s:stroke>
				<s:SolidColorStroke color="#666666" pixelHinting="true" />
			</s:stroke>
		</s:Line>
		<s:Line yFrom="0" yTo="4" xFrom="4" xTo="4">
			<s:stroke>
				<s:SolidColorStroke color="#666666" pixelHinting="true" />
			</s:stroke>
		</s:Line>
		<s:Line yFrom="0" yTo="4" xFrom="7" xTo="7">
			<s:stroke>
				<s:SolidColorStroke color="#666666" pixelHinting="true" />
			</s:stroke>
		</s:Line>
	</s:Group>
	
</s:SparkButtonSkin>
